#!/usr/bin/env python

from subprocess import Popen, PIPE

cmd = 'mocp -i'.split(' ')
p = Popen(cmd, stdout=PIPE)
info = str(p.stdout.read(), 'utf-8').split('\n')
d = dict([tuple(t.strip().split(':', 1)) for t in info[:-1]])
song = d['SongTitle']
if song == '':
    song = d['File'].split('/')[-1][:-4]

m1 = d['Artist'][1:] + ' - ' + song
print(m1)
